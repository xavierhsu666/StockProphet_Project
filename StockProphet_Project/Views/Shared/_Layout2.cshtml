	<script>
        //預設隱藏
        $(".text-content").hide();
		$(document).ready(function () {

			if (sessionStorage.getItem("LogAccount") == null) {
                $(".note-area").css("display", "none");
                $('.dropdown-menu').css("display", "none")
                $('#mynavgation-right').prepend(`<li b-vkyxnss9jg class="nav-item" id="myLogin"><a class="nav-link text-dark text-right" id="loginlink" href="/Member/Login">登入</a></li>`);
				$('#loginlink').show();
				$('#logoutlink').hide();
			} else {
                $(".note-area").css("opacity", "1");
                console.log(2)
                $('.dropdown-menu').append(` 
                                             <a class="dropdown-item" href="/Member/Edit">個人資料修改</a>
                                             <a class="dropdown-item" href="/StockModel/Predictindex">我要預測</a>
                                             <a class="dropdown-item" href="/Member/MyCollect"> 我的收藏頁面</a>
                                             <a class="dropdown-item" href="/Member/MyPredictResult">我的預測結果頁面</a>`)

                $("#mynavgation-right").append(`<li b-vkyxnss9jg class="nav-item" id="myLogout"><a class="nav-link text-dark text-right" id="logoutlink" href="/Home/Index">登出</a></li> `)
				$('#loginlink').hide();
				$('#logoutlink').show();
			}
			$("#logoutlink").on("click", function () { 
			
				if (confirm('您確定要登出嗎？')) {
					// 用户点击了确认按钮，执行相关操作
					sessionStorage.clear();
					window.location.href("/Home/Index")
				} else {
					// 用户点击了取消按钮，取消操作
					console.log("2");
				}
			
			})

		})
        $(".slide-btn").click(function () {
            if ($(".text-content").is(":hidden")) {

                $(".text-content").show("slide", { direction: "right" }, 500, "ease-in-out");
                $(".slide-btn").css('margin-left', '-40px');
                $(".slide-btn p").css("left", "12px").css("transform", "rotate(0)")

            } else {
                $(".text-content").hide("slide", { direction: "right" }, 500, "ease-in-out");
                $(".slide-btn").css('margin-left', '220px');
                $(".slide-btn p").css("left", "0px").css("transform", "rotate(180deg)");
            }

        });

        var textMaxLen = 100;
        function checkMaxInput() {

            sessionStorage.setItem("note", $("textarea").val());
            var c = $("textarea").val().length;
            if (c <= textMaxLen) $(".count-down").text(100 - c);
        }

    function tagClick(a) {
        a.remove();
        saveTag();
    }
    var tagforSession = "";
    function saveTag() {
        tagforSession = "";
        var myList = $(".var-tag .var-tag-a");

            if (myList[0] != null) {
                for (var i = 0; i < myList.length; i++) {
                    if (i != 0) tagforSession += ",";
                    tagforSession += myList[i].innerText;
                }
            }
            sessionStorage.setItem("VarTag", tagforSession);
        }

        //每次進網站都要抓sessio重新塞tag、note、字數
        var varTag = sessionStorage.getItem("VarTag");
        if (varTag != "" && varTag != null) {
            varTag = varTag.split(",");
            for (var i = 0; i < varTag.length; i++) {
                $(".var-tag").append(`<div class="var-tag-a" id="${varTag[i]}" onClick="tagClick(this)">${varTag[i]}</div>`);
            }
        }
        $("textarea").val(sessionStorage.getItem("note"));
        var c = $("textarea").val().length;
        if (c <= textMaxLen) $(".count-down").text(100 - c);


        function backHome() {
            window.location.href = "/Home/Index";
        }
        //儲值窗
        $("#highlevel").on("click", function () {

            $('#exampleModal').modal('show');
        })
       
	</script>
