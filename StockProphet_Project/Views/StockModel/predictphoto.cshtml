				pars.視窗尺寸 = val;
			} else if (i == "sLen") {
				pars.系列尺寸 = val;
			} else if (i == "tSize") {
				pars.資料筆數 = val;
			} else if (i == "cLev") {
				pars.信心水準 = val;
