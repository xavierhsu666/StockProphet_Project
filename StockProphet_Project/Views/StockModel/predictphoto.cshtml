@{
	//http://localhost:5271/stockmodel/predictphoto?pid=11
	ViewData["Title"] = "股票預測";
	TimeSpan difference = DateTime.Now.Subtract(ViewBag.result.finishdate);
	TimeSpan differenceOpp = ViewBag.result.finishdate.Subtract(DateTime.Now);




	int finishdate = (ViewBag.result.Pprefer == 1) ? 5 : 30;
	bool isTracing = ((int)difference.TotalDays <= 0) ? true : false;
	string finishdateCountDownStr = "";

	var ChartData = new List<Stock>();
	ChartData = ViewBag.result.ChartData;
	var LatestNdaysAverage = ChartData.OrderByDescending(x => x.StDate).Take(finishdate).Average(x => x.SteClose);
	string UorD = "";
	int PredictedData = (int)ViewBag.result.PredictedData;
	if (LatestNdaysAverage > PredictedData) {
		//看漲
		UorD = "看空";
	} else if (LatestNdaysAverage < PredictedData) {
		UorD = "看多";
	} else {
		UorD = "看平";
	}

	if (isTracing) {
		// 追蹤中
		finishdateCountDownStr += "預測「追蹤中」，成交價將於「" +
		(int)differenceOpp.TotalDays + "」天間達「" + ViewBag.result.PredictedData + "」元。以「" + finishdate + "」日平均而言，整體走勢「" +
		UorD + "」，預測準確率為「" +
		Math.Round(ViewBag.result.PAccuracyRatio * 100, 1) + "%」";
	} else {
		var finishdates = DateOnly.Parse(ViewBag.result.finishdate.ToString("yyyy-MM-dd"));
		var ActualPrice = ChartData.Where(x => x.StDate.CompareTo(finishdates) <= 0).OrderByDescending(x=>x.StDate).FirstOrDefault().SteClose;
		string UorD2 = "";
		if (LatestNdaysAverage > ActualPrice) {
			// 實際是跌了
			UorD2 = "看空";
		} else if (LatestNdaysAverage < ActualPrice) {
			// 實際是漲了
			UorD2 = "看多";
		} else {
			// 實際是平了
			UorD2 = "看平";
		}
		finishdateCountDownStr += "預測「已結案" + (int)difference.TotalDays + "天」，預計成交價為「" +
		ViewBag.result.PredictedData + "」元。實際成交價為「" + ActualPrice + "」，準確率約「" +
		Math.Round(ViewBag.result.PAccuracyRatio * 100, 1) + "%」，實際GAP為「" + ((int)ViewBag.result.PredictedData - (int)ActualPrice) + "元」，以「" + finishdate + "」日平均來看，預測「" +
		UorD + "」，預測結果「" + ((UorD == UorD2)?"成功」":"失敗」");

	}

