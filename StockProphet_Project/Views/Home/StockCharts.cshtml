	$("#HomeMymodel").on("click", function () {

		if (sessionStorage.getItem("LogAccount") == null) {
			// console.log("login")
			alert("尚未登入，請先登入或註冊")
			window.location.href = "/Member/Login"
		} else {
			window.location.href = "/Member/MyCollect"
		}
