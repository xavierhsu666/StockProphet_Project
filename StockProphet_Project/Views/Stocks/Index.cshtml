                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SbBussinessIncome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SiMovingAverage5)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SiMovingAverage30)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SiRsv5)
                            </td>
