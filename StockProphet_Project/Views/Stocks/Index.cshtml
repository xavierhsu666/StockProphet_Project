                            <td>
                                <a class="a-style" asp-action="Edit" asp-route-id="@item.SPk">Edit</a>
                                <a class="a-style" asp-action="Details" asp-route-id="@item.SPk">Details</a>
                                <a class="a-style" asp-action="Delete" asp-route-id="@item.SPk">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (ViewData["TotalPages"] != null && ViewData["CurrentPage"] != null)
        {
            int totalPages = (int)ViewData["TotalPages"];
            int currentPage = (int)ViewData["CurrentPage"];

            <span>Page @currentPage of @totalPages</span>
            <div style="inline-block">
                @if (currentPage > 1)
                {
                    <a href="@Url.Action("Index", new { page = 1 })" class="a-style">First</a>
                }


                @if (currentPage > 1)
                {
                    <a href="@Url.Action("Index", new { page = currentPage - 1 })" class="a-style">Previous</a>
                }


                @if (currentPage < totalPages)
                {
                    <a href="@Url.Action("Index", new { page = currentPage + 1 })" class="a-style">Next</a>

                }

                @if (currentPage < totalPages)
                {
                    <a href="@Url.Action("Index", new { page = totalPages })" class="a-style">Last</a>
                }
            </div>
        }
    </div>
</div>


<script>
    function loadModel(model) {
        console.log(model)
        window.location.href = `/${model}/Index`
    }

    $(".btn-area .mg-btn:nth-child(4)").css({
        "color": "white",
        "background-color": "#87aeb4"
    })

</script>
