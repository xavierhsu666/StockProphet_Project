<div class="area-container">
    <div class="form-container">
        <div class="logo-container">
            修改密碼
        </div>

        <form class="form">
            <div class="form-group">

                <div class="form-floating mb-3">
                    <input class="form-control" type="password" pattern=@PasswordPattern minlength="20" name="MPassword1" id="Password1" title="至少包含一個特殊符號，且長度須超過8碼" value="">
                    <label class="form-label" for="Password">輸入新密碼:</label>
                    <i id="checkEye" class="fas fa-eye-slash"></i>
                    <span id="passwordError"></span>
                </div>
                <div class="form-floating mb-3">
                    <input class="form-control" type="password" pattern=@PasswordPattern minlength="20" name="MPassword2" id="Password2" title="請再輸入您剛才設定的密碼" value="">
                    <label class="form-label" for="Password">請再次輸入密碼:</label>
                </div>
                <div id="pwdnoteword"><p style="color:red; ">您輸入的密碼不相同</p></div>
            </div>
            <div style="display: flex; justify-content: space-between; flex-direction:column">
                <button id="RevisePassword" class="btn-w-hover edit-btn">修改密碼</button>
                <button id="Reset" class="btn-w-hover cancle-btn">取消</button>
            </div>


        </form>


    </div>

</div>


 



<script>
    $('#pwdnoteword').hide();

    $(function () {
        //密碼欄位
        $("#checkEye").click(function () {
            if ($(this).hasClass('fa-eye-slash')) {
                $("#Password1").attr('type', 'text');
                $("#Password2").attr('type', 'text');

            } else {
                $("#Password1").attr('type', 'password');
                $("#Password2").attr('type', 'password');
            }
            $(this).toggleClass('fa-eye-slash').toggleClass('fa-eye');
        });

       //+正則
        $('#Password1').on('change', function () {
            var passwordValue = $(this).val();
            var passwordPattern = new RegExp(@Html.Raw(Json.Serialize(PasswordPattern)));

            // 检查输入值是否匹配正则表达式
            if (!passwordPattern.test(passwordValue)) {
                $('#passwordError').text('需至少包含一個特殊符號，且長度須超過8碼');
            } else {
                $('#passwordError').text('');
            }
        });      

        //檢查兩次輸入的密碼是否一致+正則
        $('#Password2').on("change", function () {
            var passwordValue = $(this).val();
            var passwordPattern = new RegExp(@Html.Raw(Json.Serialize(PasswordPattern)));
            var MPassword1 = $('#Password1').val();
            var MPassword2 = $('#Password2').val();

            if (MPassword1 != MPassword2) {
                $('#pwdnoteword').show();
            } else if (!passwordPattern.test(passwordValue)) {
                $('#passwordError').text('需至少包含一個特殊符號，且長度須超過8碼');
            } else if (MPassword2 == "") {
                $('#pwdnoteword').text("必填");
            }
            else {
                $('#pwdnoteword').hide();
            }
        })

        //使用sessionStorage進行跨頁面傳值
        //接收忘記密碼會員的Email
        var memberEmail = sessionStorage.getItem("FMEmail")
        // console.log(memberEmail);

        //將修改的密碼更新至DB
        $('#RevisePassword').on("click", function () {
            var dataToServer = {
               ForgotMemberEmail: memberEmail,
                RevisePassword: $('#Password1').val()
            }

            var passwordValue1 = $('#Password1').val();
            var passwordValue2 = $('#Password2').val();
            var passwordPattern = new RegExp(@Html.Raw(Json.Serialize(PasswordPattern)));

            if (passwordValue1 != passwordValue2) {
                alert("您輸入的密碼不相同");
            } else if (!passwordPattern.test(passwordValue1)) {
                alert("密碼需至少包含一個特殊符號，且長度須超過8碼");
            } else if (!passwordPattern.test(passwordValue2)) {
                alert("密碼需至少包含一個特殊符號，且長度須超過8碼");
            } else {
                $.ajax({
                    url: "/Member/SaveRevisePassword",
                    method: "put",
                    data: dataToServer,
                    success: function (e) {
                        // console.log(e);
                        window.location.href = "/Member/Login";
                    }
                })
            }           
        })

    })


</script>