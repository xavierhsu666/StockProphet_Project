        // 個人收藏頁面
        var parseDate = d3.timeParse("%Y-%m-%d");
        var sessionMID = sessionStorage.getItem("LogMemberId");
        var data = { sessionMID: sessionMID };
        //console.log(data)

        var jsonforplot = [];
        var Pbuildate;
        var plotarray = [];
        var otherprarmeter = [];
        var parameter;
        var subArray = [];

        $.ajax({
            url: "/Member/MyCollect2",
            method: "get",
            data: data,
            success: function (e) {
                console.log(e);
                e.forEach(function (element) {
                    var number = element;
                    //console.log(number);
                    $.ajax({
                        method: "get",
                        url: "/Member/Test",
                        data: { sessionPID: number },
                        success: function (e) {
                            // console.log(e);
                            jsonforplot = [];
